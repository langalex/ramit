{{nav-bar title="Transaction" back-route="account" back-model=model.account_id}}
<div class="container">
  <div class="list-group">
    <div class="list-group-item">
      <dt>Description</dt>
      <dd>{{model.description}}</dd>
    </div>
    <div class="list-group-item">
      <dt>Amount</dt>
      <dd>{{model.amount}}</dd>
    </div>
    <div class="list-group-item">
      <dt>Date</dt>
      <dd>{{format-date model.date}}</dd>
    </div>
  </div>
  <p>
    <a href="#" class="btn btn-danger remove-transaction pull-right" {{action 'deleteTransaction'}}>
      <span class="glyphicon glyphicon-remove"></span> Remove Transaction
    </a>
  </p>
</div>
