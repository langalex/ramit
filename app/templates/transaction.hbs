<div class="panel panel-default">
  <div class="panel-heading">
    {{#link-to 'account' model.account_id class="close"}}&times;{{/link-to}}
    <h3 class="panel-title">Transaction</h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
      <div class="list-group-item">
        <dt>Description</dt>
        <dd>{{model.description}}</dd>
      </div>
      <div class="list-group-item">
        <dt>Amount</dt>
        <dd>{{model.amount}}</dd>
      </div>
      <div class="list-group-item">
        <dt>Date</dt>
        <dd>{{format-date model.date}}</dd>
      </div>
    </div>
    <a href="#" class="btn btn-danger remove-transaction pull-right" {{action 'deleteTransaction'}}>
      <span class="glyphicon glyphicon-remove"></span> Remove Transaction
    </a>
  </div>
</div>
