{{nav-bar title=model.name back-route="accounts"}}
{{#paper-content class="md-padding"}}
  {{#if sortedTransactions}}
    <p>
      {{#paper-button noink=true raised=true}}
        {{#link-to 'new_transaction' model class="add-transaction"}}
          {{paper-icon icon="add"}}
          Add Transaction
        {{/link-to}}
      {{/paper-button}}
    </p>
    {{#paper-list}}
      {{#paper-item noink=true}}
        <p><strong>Balance</strong></p>
        {{#paper-button noink=true icon-button=true}}<strong>{{model.balance}}</strong>{{/paper-button}}
      {{/paper-item}}
      {{paper-divider}}
      <div class="transactions">
        {{#each sortedTransactions as |transaction|}}
          {{#paper-item noink=true}}
            <p>
              {{#link-to 'transaction' transaction class="list-group-item transaction"}}
                {{#if transaction.description}}
                  {{transaction.description}}
                {{else}}
                  -
                {{/if}}
              {{/link-to}}
            </p>
            {{#paper-button noink=true icon-button=true}}
              {{transaction.amount}}
            {{/paper-button}}
          {{/paper-item}}
          {{paper-divider}}
        {{/each}}
      </div>
    {{/paper-list}}
  {{else}}
    <h1>New account</h1>
    <p>To get started with this account put some money in it.</p>
    <p>
      {{#link-to 'new_transaction' model class="add-transaction"}}
        {{paper-button noink=true label="Add Transaction" primary=true raised=true}}
      {{/link-to}}
    </p>
  {{/if}}

  <div class="pull-right">
    {{remove-button remove-label="Remove Accountâ€¦" confirm-label="Confirm Remove Account" action="deleteAccount"}}
  </div>
{{/paper-content}}
