<div class="panel panel-default">
  <div class="panel-heading">
    {{link-to "&times;" "accounts" class="close"}}
    <h3 class="panel-title">{{model.name}}</h3>
  </div>
  <div class="panel-body">
    {{#if sortedTransactions}}
      <p>
        {{#link-to 'new_transaction' model class="add-transaction btn btn-primary form-control"}}
          <span class="glyphicon glyphicon-plus"></span>
          Add Transaction
        {{/link-to}}
      </p>
      <div class="list-group">
        <div class="list-group-item">
          <div class="row">
            <div class="col-xs-10">
              <strong>Balance</strong>
            </div>
            <div class="col-xs-2 amount">
              <strong>{{model.balance}}</strong>
            </div>
          </div>
        </div>
        <div class="transactions">
          {{#each sortedTransactions}}
            {{#link-to 'transaction' this class="list-group-item transaction"}}
              <div class="row">
                <div class="col-xs-10">
                  {{description}}
                </div>
                <div class="col-xs-2 amount">
                  {{amount}}
                </div>
              </div>
            {{/link-to}}
          {{/each}}
        </div>
      </div>
    {{else}}
      <h4>New account</h4>
      <p>To get started with this account put some money in it.</p>
      <p>
        {{#link-to 'new_transaction' model class="btn btn-primary add-transaction"}}
          <span class="glyphicon glyphicon-plus"></span>
          Add Transaction
        {{/link-to}}
      </p>
    {{/if}}
    <a href="#" {{action 'deleteAccount'}} class="btn btn-danger pull-right">
      <span class="glyphicon glyphicon-remove"></span>
      Remove Account
    </a>
  </div>
</div>
