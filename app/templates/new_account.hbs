<form {{action "createAccount" on="submit"}} class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="account-name">Account name</label>
    <div class="col-sm-10">
      {{input value=name required=true class="form-control" placeholder="choose an account name, e.g. eating out" name="name"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add Account</button>
      <a href="#" class="btn btn-default">Cancel</a>
    </div>
  </div>
</form>
